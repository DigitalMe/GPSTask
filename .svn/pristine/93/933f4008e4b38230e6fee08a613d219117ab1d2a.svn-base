<?xml version="1.0" encoding="UTF-8"?>

		<LinearLayout
		    xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/taskListRow"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">

			<CheckBox
			    android:id="@+id/checkboxTaskComplete"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:onClick="updateTask">
			</CheckBox>
			<TextView
			    android:id="@+id/textRowTaskName"
				android:padding="8dp"
				android:textSize="15sp"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:clickable="true"
			    android:onClick="onClickTaskName">
			</TextView>
			
			   
			<TextView
			    android:id="@+id/textTaskDistance"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:padding="8dp"
			    android:onClick="onClickTaskDistance"
			    android:text="" >
			</TextView>
<!-- 			    android:background="#000000" -->
						
			
		</LinearLayout>
